{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "_": ["node_modules/_"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}